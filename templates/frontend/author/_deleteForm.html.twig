<form method="post"
      action="{{ path('app.authors.delete', {'id': author.id}) }}"
      onsubmit="return confirm('Voulez-vous vraiment supprimer cet auteur ?');"
    >
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ author.id) }}">
    <button type="submit" class="btn btn-danger btn-xs">Supprimer</button>
</form>